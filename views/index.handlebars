<h2>Eat Some Burgers</h2>

<ul class="collection with header">
    <li class="collection-header">
        <h4>Burgers to eat:</h4>
    </li>
    {{#each burgers}} {{#unless eaten}} {{> burgers/burger-block eat=true}} {{/unless}} {{/each}}
</ul>


<ul class="collection with header">
    <li class="collection-header">
        <h4>Burgers that have been eaten:</h4>
    </li>
    {{#each burgers}} {{#if eaten}} {{> burgers/burger-block eat=false}} {{/if}} {{/each}}
</ul>



<div class="row">
    <div class="col s12 m6">
        <div class="card white">
            <div class="card-content black-text">
                <span class="card-title">Add a burger:</span>

                <form class="create-form">

                    <div class="form-group">
                        <label for="ca">Burger Name:</label>
                        <input type="text" id="ca" name="name">
                    </div>

                    <form action="#">
                        <p>
                            <label for="eaten">Eaten?</label>
                            <br>
                            <label>
                                <input type="radio" name="eaten" value="0" checked>
                                <span>Not Eaten</span>
                            </label>
                            <br>
                            <label>
                                <input type="radio" name="eaten" value="1">
                                <span>Eaten</span>
                            </label>
                        </p>

                        <button class="waves-effect waves-light btn" type="submit">Add Burger</button>
                    </form>
            </div>
        </div>
    </div>
</div>